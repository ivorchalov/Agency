@model StrAgent.Models.Dogovor

@{
    ViewData["Title"] = "DogovorDetails";
    Layout = "_LayoutPolicyholder";
}

<h1>DogovorDetails</h1>

<div>
    <h4>Dogovor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Klient
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klient.Login)
        </dd>
        <dt class="col-sm-2">
            Agent
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.Login)
        </dd>
        <dt class="col-sm-2">
            Tarif
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Described)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Described)
        </dd>
    </dl>
</div>
@if (Model.Status != "Accepted")
{
    <div>
        <a asp-action="EditDogovor" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="DogovorList">Back to List</a>
    </div>
}
else
{
    <div>
        <a asp-action="DogovorList">Back to List</a>
    </div>
}
